# Flask Image Storage Configuration

# Base path for subdirectory deployments (e.g., /motivatier-image)
APPLICATION_ROOT=

# Image storage configuration
BASE_PATH=images
MAX_SIZE_MB=10
ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
SESSION_SECRET=change-this-secure-key-in-production
APPLICATION_ROOT=/motivatier-image

# Server configuration
PREFERRED_URL_SCHEME=https
SERVER_NAME=

# Deployment mode
REPLIT_DEPLOYMENT=true
CGI_MODE=false

# Logging
LOG_LEVEL=INFO